<section>
  <div id="visited_countries_chart" class="simple_pie_chart" width='300px' height='100px'>
    <table>
      <tr>
        <th>Visited</th>
        <td><%= current_user.visited_countries_count %></td>
      </tr><tr>
        <th>Not Visited</th>
        <td><%= current_user.not_visited_countries_count %></td>
      </tr>
    </table>
  </div>

  <h1>Countries</h1>

  <table>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Visited?</th>
    </tr>

  <% @countries.each do |country| %>
    <tr>
      <td><%= country.name %></td>
      <td><%= country.code %></td>
      <td><%= check_box_tag(:visited, country.id, country.is_visited_by?(current_user)) %></td>
    </tr>
  <% end %>
  </table>
</section>